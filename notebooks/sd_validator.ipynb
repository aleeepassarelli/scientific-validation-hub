from sentence_transformers import SentenceTransformer, util
import time
import pandas as pd

# --- CONFIGURAÃ‡ÃƒO DO USUÃRIO (EDITE AQUI) ---
name_to_test = "Engenheiro Estoico"  # Ex: O nome curto do seu agente
domain_to_test = "Profissional de tecnologia focado em fundamentos sÃ³lidos, resiliente a hype e com clareza tÃ©cnica." # A missÃ£o completa

# --- PARÃ‚METROS DE RIGOR CIENTÃFICO (SLE v1.1) ---
THRESHOLDS = {
    "sd_pass": 0.70,          # Similaridade mÃ­nima aceitÃ¡vel
    "sd_cross_platform": 0.55,# MÃ­nimo para passar em modelos leves
    "minimalism": 4           # MÃ¡ximo de palavras permitidas no nome
}

# --- ENGINE DE VALIDAÃ‡ÃƒO ---
def load_models():
    # Usamos dois modelos para evitar viÃ©s de arquitetura (Cross-Validation)
    return {
        'miniLM': SentenceTransformer('all-MiniLM-L6-v2'),
        'mpnet': SentenceTransformer('all-mpnet-base-v2')
    }

def run_sd_check(name, domain):
    print(f"ðŸ”¬ Iniciando Auditoria SemÃ¢ntica para: '{name}'...")
    models = load_models()
    results = {}
    scores = []
    
    # 1. CÃ¡lculo Vetorial
    for model_name, model in models.items():
        emb_name = model.encode(name)
        emb_domain = model.encode(domain)
        score = util.cos_sim(emb_name, emb_domain)[0][0].item()
        results[model_name] = score
        scores.append(score)
    
    # 2. AnÃ¡lise de MÃ©tricas
    sd_mean = sum(scores) / len(scores)
    word_count = len(name.split())
    
    # 3. Veredito (LÃ³gica Booleana)
    pass_density = sd_mean >= THRESHOLDS["sd_pass"]
    pass_minimalism = word_count <= THRESHOLDS["minimalism"]
    
    overall_status = "PASS" if (pass_density and pass_minimalism) else "FAIL"
    
    return {
        "status": overall_status,
        "metrics": {
            "mean_density": sd_mean,
            "word_count": word_count,
            "scores": results
        },
        "checks": {
            "density_pass": pass_density,
            "minimalism_pass": pass_minimalism
        }
    }

# --- EXECUÃ‡ÃƒO E RELATÃ“RIO ---
audit = run_sd_check(name_to_test, domain_to_test)

print("\n" + "="*60)
print(f"ðŸ“Š RELATÃ“RIO DE VALIDAÃ‡ÃƒO CIENTÃFICA (SLE)")
